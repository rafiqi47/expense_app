<%= form_with(model: @expense, local: true) do |form| %>
  <% if @expense.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h4>
      <ul class="mb-0">
        <% @expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :amount, class: "form-label" %>
    <div class="input-group">
      <span class="input-group-text">$</span>
      <%= form.number_field :amount, class: "form-control", step: "0.01", min: "0" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.select :category,
        @categories,
        { prompt: 'Select a category' },
        class: 'form-select'
    %>
  </div>

  <div class="mb-3">
    <%= form.label :date, class: "form-label" %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="d-grid gap-2">
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>